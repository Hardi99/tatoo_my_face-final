{% extends 'base.html.twig' %}

{% block title %}Index RDV{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Liste des RDV de {{ salon.name }}</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Firstname</th>
                    <th>Lastname</th>
                    <th>Email</th>
                    <th>Date</th>
                    <th>Start</th>
                    <th>End</th>
                </tr>
            </thead>
            <tbody>
            {% for appoint in salon.appointments %}
                <tr>
                    <td>{{ appoint.id }}</td>
                    <td>{{ appoint.firstname }}</td>
                    <td>{{ appoint.lastname }}</td>
                    <td>{{ appoint.email }}</td>
                    <td>{{ appoint.appointmentAt ? appoint.appointmentAt|date('Y-m-d') : '' }}</td>
                    <td>{{ appoint.start ? appoint.start|date('H:i') : '' }}</td>
                    <td>{{ appoint.end ? appoint.end|date('H:i') : '' }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="11">Aucun rendez-vous Ã  afficher</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
